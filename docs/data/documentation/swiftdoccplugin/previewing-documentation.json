  "primaryContentSections" : [
    {
      "content" : [
        {
          "anchor" : "Overview",
          "level" : 2,
          "text" : "Overview",
          "type" : "heading"
        },
        {
          "inlineContent" : [
            {
              "text" : "The Swift-DocC plugin supports running a local web server to allow for exploring the documentation",
              "type" : "text"
            },
            {
              "text" : " ",
              "type" : "text"
            },
            {
              "text" : "in a project or previewing the documentation you’re writing.",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "inlineContent" : [
            {
              "text" : "Because the ",
              "type" : "text"
            },
            {
              "code" : "preview-documentation",
              "type" : "codeVoice"
            },
            {
              "text" : " command uses a local web server, you’ll need to disable",
              "type" : "text"
            },
            {
              "text" : " ",
              "type" : "text"
            },
            {
              "text" : "the SwiftPM plugin’s sandboxing functionality which blocks all network access by default.",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "inlineContent" : [
            {
              "text" : "To preview documentation for a specific target in your project, run the following from",
              "type" : "text"
            },
            {
              "text" : " ",
              "type" : "text"
            },
            {
              "text" : "the root of the Swift Package containing the target you’d like to preview:",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "code" : [
            "$ swift package --disable-sandbox --target [target-name] preview-documentation"
          ],
          "syntax" : "shell",
          "type" : "codeListing"
        },
        {
          "inlineContent" : [
            {
              "text" : "Swift-DocC will print something like the following:",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "code" : [
            "========================================",
            "Starting Local Preview Server",
            "     Address: http:\/\/localhost:8000\/documentation\/swiftdoccplugin",
            "========================================",
            "Monitoring \/Developer\/swift-docc-plugin\/Sources\/SwiftDocCPluginDocumentation\/SwiftDocCPlugin.docc for changes..."
          ],
          "syntax" : "shell",
          "type" : "codeListing"
        },
        {
          "inlineContent" : [
            {
              "text" : "Navigate to the printed address in your browser to preview documentation for the target.",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        }
      ],
      "kind" : "content"
    }
